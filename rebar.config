%-*-Mode:erlang;coding:utf-8;tab-width:4;c-basic-offset:4;indent-tabs-mode:()-*-
% ex: set ft=erlang fenc=utf-8 sts=4 ts=4 sw=4 et:

{deps,
 [{cloudi_core, ".*",
   {git, "git://github.com/CloudI/cloudi_core",
    {branch, "master"}}},
  {cowboy, ".*",
   {git, "git://github.com/extend/cowboy",
    {branch, "master"}}},
  {uuid, ".*",
   {git, "git://github.com/okeuday/uuid",
    {branch, "master"}}},
  {trie, ".*",
   {git, "git://github.com/okeuday/trie",
    {branch, "master"}}}]}.

{edoc_opts,
 [{preprocess, true}]}.
{erl_opts,
 [debug_info,
  %warnings_as_errors,
  strict_validation,
  warn_bif_clash,
  warn_deprecated_function,
  warn_export_all,
  warn_export_vars,
  warn_exported_vars,
  warn_obsolete_guard,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_unused_record,
  warn_unused_vars]}.
{xref_checks,
 [exports_not_used,
  undefined_function_calls]}.
{xref_warnings, true}.
{cover_enabled, true}.
{cover_print_enabled, true}.
{cover_export_enabled, true}.

